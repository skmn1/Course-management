<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="lecturer_list">
      <field name="name">Lecturer manager list</field>
      <field name="model">course.lecturer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="degree"/>
        </tree>
      </field>
    </record>

    <!-- kanban view  -->

     <record id="lecturer_view_kanban" model="ir.ui.view">
      <field name="name">Lecturer kanban view</field>
      <field name="model">course.lecturer</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
								<div class="o_kanban_image">
                  <img class="float-right o_ghost_avatar" src="/base/static/img/avatar.png" alt="Avatar"/>
								</div>
								<div class="oe_kanban_details">
									<strong class="oe_partner_heading"><field name="name"/></strong><br/>
                  <field name="degree" /><br/>
								</div>
							</div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- search view -->
    <record id="lecturer_view_search" model="ir.ui.view">
      <field name="name">Lecturer search</field>
      <field name="model">course.lecturer</field>
      <field name="arch" type="xml">
        <search string="">
          <field name="degree" />
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="lecturer_action_window">
      <field name="name">Lecturer manager window</field>
      <field name="res_model">course.lecturer</field>
      <field name="view_mode">kanban,tree,form,search</field>
    </record>
   

