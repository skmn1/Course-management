<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="lecturer_list">
      <field name="name">Lecturer manager list</field>
      <field name="model">course.lecturer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="degree"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="lecturer_action_window">
      <field name="name">Lecturer manager window</field>
      <field name="res_model">course.lecturer</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
