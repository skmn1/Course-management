          "res_model": self._name,
        }
      </field>
    </record> -->
   

    <!-- Top menu item -->
    
    <menuitem name="Course manager" id="course_menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Lecturer" id="course_manager_lecturer" parent="course_menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="List" id="lecturer_list_tab_item" parent="course_manager_lecturer"
            action="lecturer_action_window"/>
